extends layout

block precontenttitle
  //- #{entry.localID}

block precontent
  #initform(class="coverBook")
    //- place generated data with initialized entry data (time, name, initializer, etc.)
    //- - for(var i = entrylist.length; i >= entrylist.length; i--);
    em(class="localID")= currEntry.localID
    p(class="entryname" class="cardprop")= currEntry.entryname
    p(class="creatorname" class="cardprop")= currEntry.creatorname
    p(class="initdate" class="cardprop")= currEntry.initdate

  .backCover
  //- place generated data with initialized entry data (time, name, initializer, etc.)

block content
  #bookchapters
    .introductiondiv= currEntry.introduction
    .tags= currEntry.tags
    each chapter, i in currEntry.chapters
      .chapter
        #chapCount
          .txt Chapter
          .chapdata= ''+i+1
        #chapLvl
          .txt Type chapter
          .chapdata= chapter.level
        #chapURL
          .txt URL:
          .chapdata= chapter.url
        #chapTime
          .txt Date requested
          .chapdata= chapter.timereq

block localscript
  script(type='text/javascript').

    $(window).load(function(){
      var activeFish = $('#fishmenuwrap').find('[data-localid="#{currEntry.localID}"]');
      activeFish.addClass('currselected').end();

      setTimeout(function(){
        var coverBookOffset = $('.coverBook').position().top;
        var topSelectedEntry = activeFish.position().top;
        var CenterSelectedEntry = topSelectedEntry-coverBookOffset;

        $("#fishmenuwrap").scrollTop(CenterSelectedEntry);
      }, 0);

    });